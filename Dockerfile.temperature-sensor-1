FROM python:3.12-alpine

RUN addgroup -S app && adduser -S app -G app
RUN pip install --no-cache-dir paho-mqtt

WORKDIR /app
COPY src/temperature-sensor-1.py /app/temperature-sensor-1.py

USER app

# Vari√°veis de ambiente ajustadas para sensor rodar na porta 1883 sem TLS
ENV BROKER_HOST=mqtt-broker \
    BROKER_PORT=1883 \
    BROKER_TLS=false \
    BROKER_USERNAME=USER \
    BROKER_PASSWORD=SENHA \
    TOPIC=sensor/temperature \
    INTERVAL_SECONDS=5 \
    QOS=0 \
    RETAIN=false

CMD ["python", "-u", "/app/temperature-sensor-1.py"]
